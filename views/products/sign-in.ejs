    background-color: #36b314; */
}
.work{
    height: 100%;
    width: 50%;
    /* background-color: #14b39b; */
    
}
.core2{
    height: auto;
    width: 80%;
    /* background-color: #fff; */
    margin:20% auto;
}
.inp{
    padding-left:10px ;
    font-family:'FontAwesome';
    margin: 10px;
    width: 80%;
    height: 30px;
    border-radius: 20px;
    box-shadow: 4px 4px 5px rgb(7, 157, 105);
    border: 0px solid transparent;
    border-top: 1px solid black;
}
.lbl{
   font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-size: medium;
}
button{
    width:50% ;
    height: 35px;
    margin: 15px 25%;
    cursor: pointer;
    border-radius: 20px;
    border: 1px solid blue;
    color: blue;
    font-weight: bold;
    /* transition: background-color 600ms;
    transition: color 500ms; */
}
button:hover{
    color: #fff;
    background-color: #121ecf98;
    border: 1px solid transparent;
}
.core2 > span{
    margin: 5px 10%;
}
.core2 > span >a{
    text-decoration: none;
    font-weight: bold;
    color: rgb(18, 120, 203);
}
.core2 > span >a:hover{
    filter: drop-shadow(2px 2px 2px black);
    color: rgb(4, 141, 254);
}
.core1{
    height: 30%;
    width: 50%;
    overflow: hidden;
    margin: auto;
    margin-top: 40%;
   
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}
.logo{
    padding-top:30px;
    height: 100%;
    width:100%;
    background-color: black;
    border-radius: 5px;
    border-radius: 10px;
    cursor:not-allowed;
}
.e{
    margin-left: 41%;
    width: 35px;
    height: 35px;
    background-color: #fac802;
    font-size: xx-large;
    font-weight: bolder;
    text-align: center;
    border-radius: 5px;
    padding:2px 0 0 2px;
}.s{
    
    height: auto;
    background-color: #000;
    color: #fff;
    font-size: xx-large;
    font-weight: bolder;
    text-align: center;
    border-radius:5px;

}

.work >span {
    font-size: larger;
    font-weight: bolder;
    position: relative;
    top: 45px;
    left: 30%;
}
.default{
    font-family: sans-serif;
}

.condition{
    width: 100%;
    font-weight: bold;
    font-size: small;
    margin: 0;
    font-family: serif'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}
#nmspn,#emspn{
    color: #f00;
    font-weight: 600;
    font-size: small;
    margin: 0px 20px;
}
.show > i{
    font-family:'FontAwesome';
    position: absolute;
    top: 10px;
    left: 85%;
    cursor: pointer;
}
.condition2{
    font-family: 'FontAwesome';
}
        .show > i{    
        top: 240px;
    }
    .sp{
        position: relative;
        left: 20%;
    }
    @media(max-width:400px){
        .contener{
        background-color: #fff;
        border-radius: 30px;
        height: 85%;
        width: 90%;
        left: 5%;
        top: 12%;
        display: block;
    }
    .hiro{
        height: 20%;
        width: 100%;
        border-right: 0px;
        border-radius: 30px 30px 0 0;
        margin-top: -2px; 
        background-color: #007F73;
        
    }
    .work{
        height: 80%;
        width: 100%;
        /* background-color: #14b39b; */
        
    }
    .core1{
        margin-top: 2px;
        height: 100%;
        width: 50%;
       border-radius:20px;
    }
    .logo{
        padding-top:15px;
    }
    .form{
        width: 100%;
        position: relative;
        top: -40px;
        /* background-color: #100512; */
    }
    .work >span {
        top: 20px;
        left: 30%;
    }
    .show > i{
        /* left: 230px; */
        top: 212px;
    }
    .inp{
        width: 90%;
    }
    .core2 > span{
        position: relative;
        top: -45px;
        margin: 5px 2%;
    }

        .show > i{
        top: 144px;
        left: 82%;
    }
    }
    </style>
</head>
<body>
    <div class="main">
        <h1><span>Sign In</span> Page</h1>
        <div class="contener">
        <div class="hiro">
            <div class="core1">
                <div class="logo">
                    <div class="e">E</div>
                    <div class="s">Sport</div>
                </div>
            </div>
        </div>
        <div class="work">
            <span>Hello User</span>
            <div class="core2">
        <form action="http://localhost:8080/esport/user/signin" method="post" onsubmit="return sts()" class="form">
            <span id="emspn" class="sp"></span><br><span id="nmspn" class="sp"></span>
        <!-- <label class="lbl" for="nm">&nbsp;&nbsp;name</label>
        <input type="text" name="username" id="nm" class="inp" placeholder="  &#xf007;" autofocus>  <span id="nmspn"></span> -->
        <br>
        <label class="lbl" for="ph">&nbsp;&nbsp;e-mail</label>
        <input type="email"  name="uemail"id="ph" class="inp" placeholder=" &#xf2b6;"> <br>
        <label class="lbl" for="ps">&nbsp;&nbsp;password</label>
        <input type="password" name="userpass" id="ps" class="inp" placeholder="  &#xf084;"><span class="show"><i class="fa-duotone fa-eye"></i></span> <br>
        <span class="condition" ></span> 
        <button id="submit">LogIn</button> </form>
        <span>Don't have any account?<a href="http://localhost:8080/esport/user/signUp">SignUp</a></span>
    </div></div></div>
    </div>
    <script>
        let inp2=document.querySelector("#ph");
let inp3=document.querySelector("#ps");

let submit=document.querySelector("#submit");
let span1=document.querySelector("#nmspn");
let span2=document.querySelector("#emspn");
let sbtn=document.querySelector(".show");

inp2.addEventListener("keydown",()=>{
    inp2.classList.add("default");
    });
submit.addEventListener("click",sts);
function sts(){
    let flag1=0;
    let flag2=0;
    
    if(inp2.value.length<1){
        span2.innerText="email is empty";
        flag2=1
    }
    if(inp3.value.length<1){
        span1.innerText="password is empty";
        flag2=1
    }
    if(flag1==1 || flag2==1){
        return false;
    }
    else{
        return true;
    }
}
sbtn.addEventListener("click",()=>{
    // const inp3=document.querySelector(".ps");
    inp3.classList.add("default");
    if(inp3.type == "password"){
        inp3.type = "text";
    }
    else{
        inp3.type = "password";
    }
})
    </script>
</body>
</html>